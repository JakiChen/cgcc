<div class="flex flex-row flex-wrap w-full gutter-x mb-15 md:mb-25 xl:mb-30 xxl:mb-50">
	<div class="w-full md:w-1/4 gutter-x mb-15 md:mb-0">
		<p>Capabilities</p>
	</div>
	{% for capability in site.data.en_GB.about_US.capabilities %}
		<div class="w-full md:w-1/4 gutter-x mb-10 md:mb-0">
			<p class="mb-5">{{ capability.title }}</p>
			<ul>
				{% for service in capability.services %}
					<li>{{ service }}</li>
				{% endfor %}
			</ul>
		</div>
	{% endfor %}
</div>