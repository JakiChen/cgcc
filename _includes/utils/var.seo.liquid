{%- capture PAGE_TITLE -%}
	{% if page.title == "home" %}
		{{ site.title | capitalize }}
		{% else %}
		{%- comment -%}{{ page.title | capitalize }} | {{ site.title | capitalize }}{%- endcomment -%}
		{{ page.title | capitalize | prepend: 'Chapiter | '}}
	{% endif %}
{%- endcapture -%}
{%- capture PAGE_DESCRIPTION -%}
	{% if page.description != "" %}
		{{ page.description | strip_html | strip_newlines | truncate: 160 | xml_to_xmlschema }}
		{% else %}
		{{ site.data.en_GB.description | strip_html | strip_newlines | truncate: 160 | xml_to_xmlschema }}
	{% endif %}
{%- endcapture -%}